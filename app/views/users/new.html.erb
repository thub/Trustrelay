<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>
    <%= hidden_field_tag 'owner_id', params[:owner]%>

     <p>
        <label for="login">Email</label><br/>
        <%= params[:login]%>
    </p>

    <%= f.hidden_field :login,:value=>"#{params[:login]}"%></p>  



    <p><label for="name">Your connections first Name</label><br/>
        <%= f.text_field :name %></p>

    <%= name_help %>

    <p><label for="initiationMessage">Initiation message.</label><br/>
        <%= f.text_area :initiationMessage,:rows=> 5,:cols=>84%></p>


    <%= initiation_help %>


    <p><%= submit_tag 'Sign up',:class => "formbutton" %></p>
<% end -%>
