
<%= error_messages_for :user %>
<% form_for :user, :url=>update_user_path do |f| -%>

       
    <p>
        <label for="login">Your Email</label><br/>
        <%= @user.login%>
    </p>

    <%= email_help %>

    <p><label for="name">Your first Name</label><br/>
        <%= f.text_field :name %></p>

    <%= name_help %>

    
    <p><%= submit_tag 'Update',:class => "formbutton" %></p>

    <br/>
    <%= link_to 'Back', show_user_path %>



<% end -%>

