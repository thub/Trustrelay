<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>
     <p>
        <label for="login">Email</label><br/>
        <%= f.text_field :login %>
    </p>

    <%= f.hidden_field :login,:value=>"#{params[:login]}"%></p>

    <p><label for="name">Your first Name</label><br/>
        <%= f.text_field :name %></p>

    <%= name_help %>


    <p><%= submit_tag 'Sign up',:class => "formbutton" %></p>
<% end -%>
