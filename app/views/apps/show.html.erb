


<p>
    Application for:  <%= h @app.jump.item.title %>

</p>

<p>
    from <%= h @app.jump.to_user.name %> ( <%= h @app.jump.to_user.login %> )

</p>

<% if @app.jump.item.owner == self.current_user %>
    <p>
        Job passed from <%= path_to @app.jump %>
    </p>
<%end%>

<p class="preElement"><%=word_wrap @app.description,84%></p>


<% if @app.jump.to_user == self.current_user  %>
    <%= link_to 'Edit', edit_app_path(@app) %> |
    <%= link_to 'Delete', @app, :confirm => 'Are you sure?', :method => :delete %> |
<%end%>
<%= link_to 'Back', @app.jump.item%>

<% if @app.jump.item.owner == self.current_user  %>
    | <%= link_to 'Compose a message to the applicant', new_reply_path(@app.jump.item,@app.jump.to_user)%>
<%end%>
