<h1>Editing item</h1>


<% form_for :item, :url => update_item_path do |f| %>
    <%= f.error_messages %>

    <p>
        <label for='title'>Heading:</label>
    </p>
    <p><%= f.text_field :title %> </p>
    <%=  title_help %>

    <p>
        <label for="description">Description</label><br/>
        <%= f.text_area :description,:cols=>84,:rows=>30 %>
        <%= description_help %>
    </p>

    <p class="blocktext">
        <%= f.submit "Update",:class => "formbutton" %>
    </p>
<% end %>

<%= link_to 'Back', @item %>

